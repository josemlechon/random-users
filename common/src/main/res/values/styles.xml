<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LabelSemiBold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/selector_black_enabled_grey_disabled</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelSemiBold.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Label" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/selector_black_enabled_grey_disabled</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="Label.Section">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="EditText.Search">
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>
</resources>